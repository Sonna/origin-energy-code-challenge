{
  "name": "origin-energy-code-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc -b && vite build && npm run build:server",
    "build:client": "tsc -p tsconfig.client.json",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "vite",
    "format": "npx prettier --cache --write src test && eslint --cache --cache-location 'node_modules/.cache/eslint/.eslintcache' --fix src test",
    "generate-types": "npx openapicmd typegen --client http://localhost:8080/openapi.json > ./src/api/openapi/openapi.d.ts",
    "postgenerate-types": "npm run format",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc",
    "lint:eslint": "eslint --cache --cache-location 'node_modules/.cache/eslint/.eslintcache' src",
    "lint:prettier": "prettier --cache --list-different src",
    "lint:tsc": "tsc",
    "preview": "vite preview",
    "start": "node ./dist/server.js",
    "test": "jest",
    "test:cypress-gui": "npm --prefix ./integration run test:cypress-gui",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@tanstack/react-query": "^5.79.0",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/react-router": "^5.1.20",
    "classnames": "^2.5.1",
    "express": "^5.1.0",
    "openapi-backend": "^5.12.0",
    "openapi-client-axios": "^7.6.0",
    "papercss": "^1.9.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "react-router": "^7.6.1",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "zod": "^3.25.45",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jest/globals": "^30.0.0-beta.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.18",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/text-encoding": "^0.0.40",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.1",
    "@vitejs/plugin-react": "^4.5.0",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dedent": "^1.6.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "nock": "^14.0.5",
    "openapicmd": "^2.7.0",
    "prettier": "3.5.3",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
